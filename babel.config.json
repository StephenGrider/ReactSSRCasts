{
    "presets": [
        [
            "@babel/env",
            {
                "targets": {
                    "node": "12"
                }
            }
        ],
        ["@babel/preset-react"]
    ],
    "plugins": [
        "transform-class-properties",
        ["module-resolver", {
            "root": ["./src"],
            "alias": {
                "@client": "./src/client",
                "@modules": "./src/modules",
                "@rm": "./src/modules/react-mono",
                "@root": "./src",
                "@services": "./src/services"
            }
        }]
    ]
}
